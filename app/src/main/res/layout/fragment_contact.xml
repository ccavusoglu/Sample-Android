<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="48dp"
>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTextIcons"
                android:layout_margin="12dp"
                android:paddingBottom="48dp"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
            />

            <TextView
                    android:id="@+id/t11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:lines="1"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp" android:layout_marginTop="6dp" android:layout_marginBottom="6dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
            />

            <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
            />

            <TextView
                    android:id="@+id/t22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:lines="1"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp" android:layout_marginTop="6dp" android:layout_marginBottom="6dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
            />

            <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
            />

            <TextView
                    android:id="@+id/t33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:lines="1"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp" android:layout_marginTop="6dp" android:layout_marginBottom="6dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
            />

            <TextView
                    android:id="@+id/t4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
            />

            <TextView
                    android:id="@+id/t44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:lines="1"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp" android:layout_marginTop="6dp" android:layout_marginBottom="6dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
            />

            <TextView
                    android:id="@+id/t5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp" android:layout_marginTop="10dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
            />

            <TextView
                    android:id="@+id/t55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:lines="1"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp" android:layout_marginTop="6dp" android:layout_marginBottom="6dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
            />

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent">

                <TextView
                        android:id="@+id/t6"
                        android:layout_width="264dp"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textSize="18sp"
                        android:paddingLeft="10dp" android:paddingTop="10dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/colorTextIcons"
                        android:background="@color/colorPrimaryLight"
                />

                <TextView
                        android:id="@+id/t66"
                        android:layout_width="264dp"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:layout_below="@id/t6"
                        android:lines="2"
                        android:textSize="16sp"
                        android:textColor="@color/colorTextIcons"
                        android:paddingLeft="10dp" android:paddingTop="6dp" android:paddingBottom="6dp"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:background="@color/colorPrimaryLight"
                />

                <ImageButton android:layout_width="match_parent"
                             android:layout_height="fill_parent"
                             android:id="@+id/b1"
                             android:layout_toRightOf="@id/t6"
                             android:src="@drawable/ic_whatsapp_white_48dp"
                             android:adjustViewBounds="true"
                             android:layout_alignTop="@id/t6"
                             android:layout_alignBottom="@id/t66"
                             android:layout_marginTop="-6dp"
                             android:layout_marginBottom="-6dp"
                             android:layout_marginRight="-5dp"
                             android:backgroundTint="@color/colorPrimaryLight"
                />

            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="24dp"
            >

                <Button android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:id="@+id/b2"
                        android:text="Show on Google Maps"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"
                        android:background="@color/colorTextIcons"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                />

                <ImageView android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:src="@drawable/map"
                           android:scaleType="fitXY"
                           android:adjustViewBounds="true"
                />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>